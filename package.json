{
  "name": "sanitise-object-deep-by-regex",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "benchmark": "npm t && npm run build && node benchmark.js",
    "benchmark:watch": "nodemon --watch src -e ts --exec npm run benchmark",
    "perf:init": "rm -f src/alt.* && cp src/index.ts src/alt.ts && cp src/index.spec.ts src/alt.spec.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}!api/src/generated/*.ts": [
      "prettier --parser typescript --write",
      "tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/benchmark.*"
    ],
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/benchmark": "1.0.31",
    "@types/jest": "22.2.3",
    "@types/node": "10.0.9",
    "husky": "0.14.3",
    "jest": "22.4.3",
    "lint-staged": "7.1.0",
    "nodemon": "1.17.4",
    "prettier": "1.12.1",
    "tslint": "5.10.0",
    "typescript": "2.8.3"
  },
  "dependencies": {
    "benchmark": "^2.1.4"
  }
}
